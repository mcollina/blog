<%= render :partial => "article", :collection => @articles, :as => :article %>

<% if @articles.next_page -%>
<%= link_to "Previous Articles", articles_path(:page => @articles.next_page), :class => "floatRight" %>
<% end -%>
<% if @articles.previous_page -%>
<%= link_to "Following Articles", articles_path(:page => @articles.previous_page), :class => "floatLeft" %>
<% end -%>
