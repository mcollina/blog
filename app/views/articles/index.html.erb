<%= render :partial => "article", :collection => @articles, :as => :article %>

<% if @search.next_page <= @search.last_page -%>
<%= link_to "Previous Articles", articles_path(:page => @search.next_page), :class => "floatRight" %>
<% end -%>
<% if @search.prev_page >= @search.first_page -%>
<%= link_to "Following Articles", articles_path(:page => @search.prev_page), :class => "floatLeft" %>
<% end -%>
