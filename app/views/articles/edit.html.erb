<div class="gradient">
  <h1>Editing article</h1>

  <% form_for(@article) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :content %><br />
      <%= f.text_area :content, :class => "mceEditor" %>
    </p>
    <p>
      <%= f.label :created_at %><br />
      <%= f.datetime_select :created_at %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
  <% end %>
</div>